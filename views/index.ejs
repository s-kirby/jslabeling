<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Example Quote App to learn JS</title>
  </head>

  <body>
    <h1>For TrafficNet Project.</h1>

    <form action="/quotes" method="POST">
      <input type="text" placeholder="name" name="name" />
      <input type="text" placeholder="quote" name="quote" />
      <button type="submit">Submit Form</button>
    </form>

    
    <h2> Quotes </h2>

    <ul class="quotes">
      <!-- Loop through quotes -->
      <% for(var i = 0; i < quotes.length; i++) {%>
        <li class="quote">
          <!-- Output name from the iterated quote object -->
          <span><%= quotes[i].name %></span>:
          <!-- Output quote from the iterated quote object -->
          <span><%= quotes[i].quote %></span>
        </li>
      <% } %>
    </ul>

    <div>
      <h2>Replace an entry</h2>
      <p>
        Replace the first quote with a new quote
      </p>
      <button id="update-button">Replace first entry</button>
    </div>
    
    <div>
      <h2>Remove Paul Quotes!</h2>
      <p>
        Delete one Paul's quote. Does nothing if there are no more Paul's quote
      </p>
      <button id="delete-button">Delete Paul's quote</button>
    </div>

    <div id="message"></div>

    <!-- Load Main JS -->
    <script src="/main.js"></script>

  </body>
</html>